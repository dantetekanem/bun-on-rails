<h1>Users</h1>

<% if (users && users.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/users/<%= user.id %>">View</a>
            <a href="/users/<%= user.id %>/edit">Edit</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No users found.</p>
<% } %>

<p><a href="/users/new">Create New User</a></p>